<!-- app/views/tasks/index.html.erb -->
<h1>Task List</h1>

<% if @tasks.any? %>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.title, task_path(task) %></li>
    <% end %>
  </ul>
<% else %>
  <p>No tasks found.</p>
<% end %>

<div>
  <%= link_to 'Create new task', new_task_path %>
</div>

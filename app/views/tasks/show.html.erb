<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @task.title %></h1>
    <p><%= @task.details %></p>
  </div>

  <% if @task.completed %>
    <i class="fa fa-check-square-o"></i> This task is completed
  <% else %>
    <i class="fa fa-square-o"></i> This task is not completed yet
  <% end %>

  <div>
    <%= link_to 'Back to all tasks', tasks_path %>
  </div>

  <%= link_to 'Edit',
    edit_task_path(@task),
    data: {turbo_method: :get}
  %>

  <%= link_to 'Delete',
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
<div>
